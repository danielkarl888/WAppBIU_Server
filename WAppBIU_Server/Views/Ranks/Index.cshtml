@model IEnumerable<WAppBIU_Server.Models.Rank>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Ranks Table</h1>

<p>
    <a asp-action="Create" class="btn btn-success align-items-center">Add your Rank to our App!</a>
</p>
@{
    float sum = 0;
    int i = 0;
    foreach(var item in Model)
    {
        sum += item.Number;
    }
    sum /= Model.Count();
    sum = (float)System.Math.Round(sum, 2);
}

<div class="fs-2 text-center"> The averaged rank for our app is @sum </div>
<form asp-action="Index" autocomplete="off">
    <input name="query" id="search" />
    <input type="submit" value="Search" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src=~/js/search.js></script>
}
